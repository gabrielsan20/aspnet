@model IEnumerable<ProjectWebApp.Models.Clients>

@{
    ViewData["Title"] = "Index";
}

<h4>Search for a client</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults" class="searchbox">
            
            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
            </div>
            <br />
            <div class="form-group">
              <label for="SearchCategory" class="control-label"></label>
              <select name="SearchCategory" class="form-control" placeholder="Category">  
                    <option>Gold</option>
                    <option>Iron</option>
                    <option>Bronze</option>
                    <option>Any</option>
              </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)

            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Category)

            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 

            </td>
        </tr>
}
    </tbody>
</table>
